<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Spinner
                android:id="@+id/spinner_choices"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:entries="@array/choices"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:id="@+id/spinner_order"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:entries="@array/orders"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/topRatedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/top_rated"
                android:visibility="gone">
            </Button>

            <Button
                android:id="@+id/allRatedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/all_rated"
                android:visibility="gone">
            </Button>

<!--            <Button-->
<!--                android:id="@+id/btnSearch"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/go_to_search"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginTop="20dp"/>-->

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_search"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/review_card"/>
    </LinearLayout>
</FrameLayout>